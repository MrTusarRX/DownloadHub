            background: rgba(16, 185, 129, 0.3);
            color: #10b981;
        }
        
        .stage-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #f8fafc;
        }
        
        .stage-desc {
            font-size: 1rem;
            color: #cbd5e1;
            line-height: 1.5;
            margin-bottom: 20px;
        }
        
        .stage-progress-container {
            height: 8px;
            background: rgba(15, 23, 42, 0.8);
            border-radius: 4px;
            overflow: hidden;
            margin-bottom: 15px;
        }
        
        .stage-progress {
            height: 100%;
            background: linear-gradient(90deg, #1d4ed8, #3b82f6);
            width: 0%;
            transition: width 1.5s ease;
            border-radius: 4px;
        }
        
        .stage-status {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .stage-percentage {
            font-weight: 700;
            color: #60a5fa;
            font-size: 1.2rem;
        }
        
        .stage-status-text {
            font-size: 0.9rem;
            padding: 5px 15px;
            border-radius: 20px;
            background: rgba(59, 130, 246, 0.2);
            color: #60a5fa;
        }
        
        .completed .stage-status-text {
            background: rgba(16, 185, 129, 0.2);
            color: #10b981;
        }
        
        .update-notice {
            background: rgba(245, 158, 11, 0.1);
            border-left: 5px solid #f59e0b;
            padding: 25px;
            margin-top: 40px;
            border-radius: 0 15px 15px 0;
            display: flex;
            align-items: flex-start;
            gap: 20px;
        }
        
        .notice-icon {
            font-size: 2.5rem;
            color: #f59e0b;
        }
        
        .notice-text h3 {
            color: #f59e0b;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }
        
        .notice-text p {
            color: #f8fafc;
            line-height: 1.6;
        }
        
        .update-footer {
            background: linear-gradient(90deg, #0f172a, #1e293b);
            padding: 25px 40px;
            border-top: 1px solid rgba(59, 130, 246, 0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }
        
        .footer-left {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        
        .current-status {
            font-size: 1.3rem;
            color: #f8fafc;
            font-weight: 600;
        }
        
        .status-dots {
            display: inline-block;
            margin-left: 5px;
        }
        
        .status-dots span {
            animation: statusPulse 1.5s infinite;
            opacity: 0;
            margin: 0 1px;
        }
        
        .status-dots span:nth-child(2) {
            animation-delay: 0.2s;
        }
        
        .status-dots span:nth-child(3) {
            animation-delay: 0.4s;
        }
        
        @keyframes statusPulse {
            0% { opacity: 0; }
            50% { opacity: 1; }
            100% { opacity: 0; }
        }
        
        .update-version {
            color: #cbd5e1;
            font-size: 0.9rem;
        }
        
        .footer-right {
            text-align: right;
        }
        
        .owner-info {
            font-size: 1.2rem;
            color: #f8fafc;
            font-weight: 600;
        }
        
        .last-updated {
            color: #cbd5e1;
            font-size: 0.9rem;
            margin-top: 5px;
        }
        
        @media (max-width: 768px) {
            .update-header {
                padding: 20px;
            }
            
            .site-name {
                font-size: 2.5rem;
            }
            
            .progress-section {
                padding: 25px;
            }
            
            .progress-main {
                padding: 20px;
            }
            
            .time-display {
                flex-direction: column;
                gap: 15px;
            }
            
            .update-footer {
                flex-direction: column;
                text-align: center;
            }
            
            .footer-right {
                text-align: center;
            }
        }
        
        @media (max-width: 480px) {
            .site-logo {
                flex-direction: column;
                gap: 10px;
            }
            
            .progress-percentage {
                font-size: 2.5rem;
            }
            
            .time-value {
                font-size: 1.8rem;
            }
        }
    </style>
</head>
<body>
