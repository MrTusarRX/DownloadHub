    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const particlesContainer = document.getElementById('particles-container');
            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                particle.style.animationDelay = `${Math.random() * 15}s`;
                particle.style.animationDuration = `${10 + Math.random() * 20}s`;
                particlesContainer.appendChild(particle);
            }
            const now = new Date();
            const startTime = now.toLocaleTimeString();
            document.getElementById('start-time').textContent = startTime;
            document.getElementById('last-updated').textContent = startTime;
            const completionTime = new Date(now.getTime() + (20 * 60 * 60 * 1000));
            const completionTimeStr = completionTime.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            document.getElementById('completion-time').textContent = completionTimeStr + " (approx)";
            const progressDots = document.getElementById('progress-dots');
            for (let i = 0; i < 20; i++) {
                const dot = document.createElement('div');
                dot.classList.add('progress-dot');
                if (i === 0) dot.classList.add('active');
                progressDots.appendChild(dot);
            }

            const mainProgressFill = document.getElementById('main-progress');
            const progressPercentage = document.querySelector('.progress-percentage');
            const timeElapsed = document.getElementById('time-elapsed');
            const timeRemaining = document.getElementById('time-remaining');
            const currentStatusText = document.getElementById('current-status-text');
            const stageCards = document.querySelectorAll('.stage-card');
            const stageProgresses = document.querySelectorAll('.stage-progress');
            const stagePercentages = document.querySelectorAll('.stage-percentage');
            const stageStatusTexts = document.querySelectorAll('.stage-status-text');
            const lastUpdated = document.getElementById('last-updated');
            const stages = [
                { 
                    id: 'stage1', 
                    name: 'Database Migration', 
                    duration: 8 * 60 * 60, 
                    progress: 0,
                    statusMessages: [
                        "Backing up existing game database...",
                        "Creating new database schema...",
                        "Migrating 50,000+ MOD game entries...",
                        "Transferring user data and download history...",
                        "Optimizing database for faster searches...",
                        "Database migration complete!"
                    ]
                },
                { 
                    id: 'stage2', 
                    name: 'Download Server Upgrade', 
                    duration: 5 * 60 * 60, 
                    progress: 0,
                    statusMessages: [
                        "Setting up new download servers...",
                        "Configuring CDN for global distribution...",
                        "Testing download speeds from 10 locations...",
                        "Implementing new download queue system...",
                        "Server upgrade complete!"
                    ]
                },
                { 
                    id: 'stage3', 
                    name: 'Security Implementation', 
                    duration: 4 * 60 * 60, 
                    progress: 0,
                    statusMessages: [
                        "Implementing advanced malware scanning...",
                        "Setting up anti-leech protection...",
                        "Configuring two-factor authentication...",
                        "Adding encryption for user data...",
                        "Security implementation complete!"
                    ]
                },
                { 
                    id: 'stage4', 
                    name: 'UI/UX Redesign', 
                    duration: 3 * 60 * 60,
                    progress: 0,
                    statusMessages: [
                        "Implementing new dark/light theme system...",
                        "Optimizing mobile interface...",
                        "Adding new game categories and filters...",
                        "Testing new navigation system...",
                        "UI/UX redesign complete!"
                    ]
                }
            ];
            
            const totalTime = 20 * 60 * 60;
            let elapsedSeconds = 0;
            let currentStage = 0;
            let stageTimeElapsed = 0;
            let statusUpdateCounter = 0;
            const statusUpdateInterval = 8; 
            const overallStatusMessages = [
                "Initializing database migration...",
                "Database migration in progress...",
                "Optimizing game database structure...",
                "Setting up new download servers...",
                "Configuring global CDN network...",
                "Implementing advanced security features...",
                "Scanning and securing APK files...",
                "Redesigning user interface...",
                "Testing new mobile-optimized layout...",
                "Finalizing DownloadHub v5.0 update..."
            ];

            function formatTime(seconds) {
                const hours = Math.floor(seconds / 3600);
                const minutes = Math.floor((seconds % 3600) / 60);
                const secs = seconds % 60;
                return `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
            }
            
            function updateProgressDots() {
                const dots = document.querySelectorAll('.progress-dot');
                const activeDotCount = Math.floor((elapsedSeconds / totalTime) * dots.length);
                
                dots.forEach((dot, index) => {
                    dot.classList.remove('active');
                    if (index <= activeDotCount) {
                        dot.classList.add('active');
                    }
                });
            }

            function updateStageCard(index, stageProgress) {
                const card = stageCards[index];
                const percentageElement = stagePercentages[index];
                const statusElement = stageStatusTexts[index];
                const progressElement = stageProgresses[index];
                
                progressElement.style.width = `${stageProgress}%`;
                percentageElement.textContent = `${stageProgress}%`;
                
                if (index < currentStage) {
                    card.classList.remove('active');
                    card.classList.add('completed');
                    statusElement.textContent = 'Completed';
                } else if (index === currentStage) {
                    card.classList.add('active');
                    card.classList.remove('completed');
                    statusElement.textContent = `${stageProgress}%`;
                } else {
                    card.classList.remove('active', 'completed');
                    statusElement.textContent = 'Pending';
                }
            }
            
            function updateStatusMessage() {
                if (statusUpdateCounter >= statusUpdateInterval) {
                    const messageIndex = Math.min(
                        Math.floor((elapsedSeconds / totalTime) * overallStatusMessages.length), 
                        overallStatusMessages.length - 1
                    );
                    currentStatusText.textContent = overallStatusMessages[messageIndex];
                    statusUpdateCounter = 0;
                    const now = new Date();
                    lastUpdated.textContent = now.toLocaleTimeString();
                }
            }
            
            function updateProgress() {
                const overallPercentage = Math.min(100, (elapsedSeconds / totalTime) * 100);
              
                mainProgressFill.style.width = `${overallPercentage}%`;
                progressPercentage.textContent = `${Math.floor(overallPercentage)}%`;
                timeElapsed.textContent = formatTime(elapsedSeconds);
                const remainingSeconds = totalTime - elapsedSeconds;
                timeRemaining.textContent = formatTime(remainingSeconds);
           
                updateProgressDots();
                
  
                if (currentStage < stages.length) {
                    const stage = stages[currentStage];

                    const stageProgress = Math.min(100, (stageTimeElapsed / stage.duration) * 100);
                    stage.progress = stageProgress;
                    updateStageCard(currentStage, Math.floor(stageProgress));
                    if (stageTimeElapsed >= stage.duration) {
                        stageCards[currentStage].classList.remove('active');
                        stageCards[currentStage].classList.add('completed');
                        currentStage++;
                        stageTimeElapsed = 0;
                        
                        if (currentStage < stages.length) {
                            stageCards[currentStage].classList.add('active');
                            currentStatusText.textContent = `Starting ${stages[currentStage].name.toLowerCase()}...`;
                        }
                    }
                }
                
                updateStatusMessage();
                for (let i = 0; i < currentStage; i++) {
                    updateStageCard(i, 100);
                }
                if (elapsedSeconds < totalTime) {
                    elapsedSeconds++;
                    stageTimeElapsed++;
                    statusUpdateCounter++;
                    const timeScale = 100; 
                    const delay = (totalTime / timeScale) * 10; 
                    
                    setTimeout(updateProgress, 100);
                } else {
                    mainProgressFill.style.background = 'linear-gradient(90deg, #1d4ed8, #10b981)';
                    progressPercentage.textContent = '100%';
                    progressPercentage.style.color = '#10b981';
                    currentStatusText.textContent = "DownloadHub v5.0 update complete! The site will restart in 5 minutes.";
                    timeRemaining.textContent = "00:00:00";
                    stageCards.forEach(card => {
                        card.classList.remove('active');
                        card.classList.add('completed');
                    });
                    
                    stageStatusTexts.forEach(status => {
                        status.textContent = 'Completed';
                    });
                    stageProgresses.forEach(progress => {
                        progress.style.width = '100%';
                        progress.style.background = 'linear-gradient(90deg, #1d4ed8, #10b981)';
                    });
                    
                    stagePercentages.forEach(percentage => {
                        percentage.textContent = '100%';
                    });
                    document.querySelectorAll('.progress-dot').forEach(dot => {
                        dot.classList.add('active');
                        dot.style.background = '#10b981';
                    });
                }
            }
            updateProgressDots();
            setTimeout(updateProgress, 2000);
            setInterval(() => {
                if (Math.random() > 0.7 && elapsedSeconds < totalTime - 300) {
                    const randomMessages = [
                        "Optimizing database queries for faster searches...",
                        "Testing download speeds from Tokyo server...",
                        "Verifying APK file integrity...",
                        "Compressing game thumbnails for faster loading...",
                        "Applying security patches to user system...",
                        "Generating new game category thumbnails..."
                    ];
                    
                    const randomIndex = Math.floor(Math.random() * randomMessages.length);
                    currentStatusText.textContent = randomMessages[randomIndex];
                    const originalColor = mainProgressFill.style.background;
                    mainProgressFill.style.background = 'linear-gradient(90deg, #1d4ed8, #8b5cf6)';
                    
                    setTimeout(() => {
                        mainProgressFill.style.background = originalColor;
                    }, 3000);
                }
            }, 15000);
        });
    </script>
</body>
</html>
